@model List<CapaAdmin.Models.ViewModel.PersonaViewModel>
@{
    Layout = null;
}

<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css">

<div class="row" style="text-align:center;">
    <img src="https://www.cuentosinfantiles.top/wp-content/uploads/2020/11/El-ave-Fe%CC%81nix.png" width="300" height="328" />

</div>
<br />
<div class="row" style="border: 1px solid #000;">
    <div class="col-xs-3">
        Nombre
    </div>
    <div class="col-xs-3">
        Puesto
    </div>
    <div class="col-xs-3">
        SalarioxMes
    </div>
</div>

@foreach (var oElement in Model)
{
    <div class="row">
        <div class="col-xs-3">
            @oElement.Nombre
        </div>
        <div class="col-xs-3">
            @oElement.Puesto
        </div>
        <div class="col-xs-3">
            @oElement.SalarioxMes
        </div>
    </div>
}