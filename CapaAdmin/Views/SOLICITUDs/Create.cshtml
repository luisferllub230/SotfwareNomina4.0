@model CapaAdmin.Models.SOLICITUD

@{
    ViewBag.Title = "Crear una Nueva Solicitud";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var btnZise = "h4";
    var btnPadding = "pt-1 pb-1";

}

<div class="card mt-5 border-dark">
    <div class="card-header bg-dark bg-gradient">
        <h4 class="text-center text-white">
            @ViewBag.Title
        </h4>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group m-3">
                @Html.LabelFor(model => model.NOMBRE, htmlAttributes: new { @class = "control-label col-md-2 fw-bold mb-1" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.NOMBRE, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NOMBRE, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group m-3">
                @Html.LabelFor(model => model.APELLIDO, htmlAttributes: new { @class = "control-label col-md-2 fw-bold mb-1" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.APELLIDO, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.APELLIDO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group m-3">
                @Html.LabelFor(model => model.TITULO, htmlAttributes: new { @class = "control-label col-md-2 fw-bold mb-1" })
                <div class="col-md-13">
                    @Html.EditorFor(model => model.TITULO, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TITULO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group m-3">
                @Html.LabelFor(model => model.MENSAJE, htmlAttributes: new { @class = "control-label col-md-2 fw-bold mb-1" })
                <div class="col-md-13">
                    @Html.EditorFor(model => model.MENSAJE, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MENSAJE, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group card-footer">
                <div class="col-md-offset-2 col-md-10">
                    <a class="btn btn-primary @btnZise @btnPadding" href="@Url.Action("Index", "SOLICITUDs")"><i class="bi bi-arrow-bar-left"></i></a>
                    <input type="submit" value="Create" class="btn btn-success @btnZise @btnPadding" />
                </div>
            </div>
        </div>
    }
</div>