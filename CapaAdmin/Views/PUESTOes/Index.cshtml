@model IEnumerable<CapaAdmin.Models.PUESTO>

@{
    ViewBag.Title = "Puestos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var btnZise = "h4";
    var btnPadding = "pt-1 pb-1";

}



<div class="card mt-3 border-dark">
    <div class="card-header bg-dark bg-gradient">
        <h4 class="text-center text-white">
            @ViewBag.Title
        </h4>
    </div>

    <p class="m-2">
        <a class="btn btn-success" href="@Url.Action("Create", "PUESTOes")"><i class="bi bi-person-plus @btnZise @btnPadding"></i></a>
    </p>
    <table class="table m-1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NOMBRE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NIVEL_RIESGO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NIVEL_MN_SALARIO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NIVEL_MX_SALARIO)
            </th>
            <th>
                Editar/Detalles/Borrar
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NOMBRE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NIVEL_RIESGO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NIVEL_MN_SALARIO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NIVEL_MX_SALARIO)
                </td>
                <td>

                    <a class="btn btn-warning p-0 ps-2 pe-2 text-white" href="@Url.Action("Edit", "PUESTOes", new { id = item.ID_PUES })"><i class="bi bi-pencil-square @btnZise @btnPadding"></i></a> |
                    <a class="btn btn-primary p-0 ps-2 pe-2 text-white" href="@Url.Action("Details", "PUESTOes", new { id = item.ID_PUES})"><i class="bi bi-ticket-detailed @btnZise @btnPadding"></i></a> |
                    <a class="btn btn-danger p-0 ps-2 pe-2 text-white" href="@Url.Action("Delete", "PUESTOes", new { id = item.ID_PUES })"><i class="bi bi-trash3 @btnZise @btnPadding"></i></a>
                </td>
            </tr>
        }

    </table>
</div>
