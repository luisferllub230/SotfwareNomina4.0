@model CapaAdmin.Models.EMPLEADO

@{
    ViewBag.Title = "Editar Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var btnZise = "h4";
    var btnPadding = "pt-1 pb-1";

}


<div class="card mt-5 border-dark">
    <div class="card-header bg-dark bg-gradient">
        <h4 class="text-center text-white">
            @ViewBag.Title
        </h4>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID_EMPLE)

            <div class="form-group m-3 ">
                @Html.LabelFor(model => model.CEDULA, htmlAttributes: new { @class = "control-label col-md-2 fw-bold mb-1" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.CEDULA, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CEDULA, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group m-3">
                @Html.LabelFor(model => model.NOMBRE, htmlAttributes: new { @class = "control-label col-md-2 fw-bold mb-1" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.NOMBRE, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NOMBRE, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group m-3">
                @Html.LabelFor(model => model.SALARIO, htmlAttributes: new { @class = "control-label col-md-2 fw-bold mb-1" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.SALARIO, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SALARIO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group m-3">
                @Html.LabelFor(model => model.ID_DEPARTAMENTO, "ID_DEPARTAMENTO", htmlAttributes: new { @class = "control-label col-md-2 fw-bold mb-1" })
                <div class="col-md-12">
                    @Html.DropDownList("ID_DEPARTAMENTO", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_DEPARTAMENTO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group m-3">
                @Html.LabelFor(model => model.ID_PUESTO, "ID_PUESTO", htmlAttributes: new { @class = "control-label col-md-2  fw-bold mb-1" })
                <div class="col-md-12">
                    @Html.DropDownList("ID_PUESTO", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_PUESTO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group m-3">
                @Html.LabelFor(model => model.ID_NOMINA, "ID_NOMINA", htmlAttributes: new { @class = "control-label col-md-2 fw-bold mb-1" })
                <div class="col-md-12">
                    @Html.DropDownList("ID_NOMINA", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_NOMINA, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group card-footer">
                <div class="col-md-offset-2 col-md-10">
                    <a class="btn btn-primary @btnZise @btnPadding" href="@Url.Action("Index", "EMPLEADOes")"><i class="bi bi-arrow-bar-left"></i></a>
                    <input type="submit" value="Guardar" class="btn btn-success @btnZise @btnPadding" />
                </div>
            </div>
        </div>
    }
</div>